<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.ListViewGroup">
    <ContentPage.Content>
        <ListView x:Name="lstDT" HasUnevenRows="True"
                  GroupDisplayBinding="{Binding TenLoai}"
                  GroupShortNameBinding="{Binding TenLoai}"
                  IsGroupingEnabled="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell ImageSource="{Binding Hinh}" Text="{Binding TenDT}" Detail="{Binding MoTa}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>